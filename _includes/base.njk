<!doctype html>
<html lang="id">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  {% include "components/seo.njk" %}

  <link rel="stylesheet" href="{{ '/assets/css/style.css' | url }}">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
</head>

<body class="d-flex flex-column min-vh-100">

  {% include "top-banner.njk" %}
  {% include "header.njk" %}

  <main>
    {{ content | safe }}
  </main>

  {% include "footer.njk" %}

  <a href="#" id="back-to-top" class="back-to-top-btn" aria-label="Kembali ke atas">
    <i class="bi bi-arrow-up"></i>
  </a>
  <a href="#" id="whatsapp-fab" class="whatsapp-fab" target="_blank" aria-label="Chat di WhatsApp">
    <i class="bi bi-whatsapp"></i>
    <span id="whatsapp-fab-text" class="whatsapp-fab-text"></span>
  </a>
  <div id="social-proof-toast" class="social-proof">
    <div class="d-flex">
      <img id="sp-avatar" src="" alt="Avatar" class="sp-avatar rounded-circle">
      <div class="sp-content">
        <p id="sp-author" class="sp-author fw-bold mb-0"></p>
        <p id="sp-quote" class="sp-quote mb-0"></p>
      </div>
    </div>
  </div>

  <div class="offcanvas offcanvas-end" tabindex="-1" id="cartOffcanvas" aria-labelledby="cartOffcanvasLabel">
    <div class="offcanvas-header border-bottom">
      <h5 class="offcanvas-title" id="cartOffcanvasLabel"><i class="bi bi-cart3 me-2"></i>Keranjang Anda</h5>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
      <div id="cart-items-container">
        <p class="text-center text-muted">Keranjang Anda masih kosong.</p>
      </div>
    </div>
    <div id="cart-footer" class="offcanvas-footer p-3 border-top" style="display: none;">
      <div class="d-flex justify-content-between fw-bold fs-5 mb-3">
        <span>Total:</span>
        <span id="cart-total-price">Rp0</span>
      </div>
      <div class="d-grid">
        <button id="checkout-whatsapp-button" class="btn btn-success btn-lg">
          <i class="bi bi-whatsapp"></i> Checkout via WhatsApp
        </button>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
  <script src="{{ '/assets/js/main.js' | url }}"></script>
  <script src="{{ '/assets/js/cart.js' | url }}"></script>
  <script src="{{ '/assets/js/quiz.js' | url }}"></script> 

  <script>
    // Inisialisasi AOS
    AOS.init({
      once: true,
      duration: 800
    });
  </script>

<div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-body p-0">
            <div class="container-fluid">
              <div class="row">
                <div class="col-lg-6 p-0">
                  <img id="modal-product-image" src="" class="img-fluid" alt="Product image">
                </div>
                <div class="col-lg-6 p-4 d-flex flex-column">
                  <button type="button" class="btn-close ms-auto" data-bs-dismiss="modal" aria-label="Close"></button>
                  <h3 id="modal-product-title" class="fw-bold"></h3>
                  <h4 id="modal-product-price" class="text-primary fw-bolder my-3"></h4>
                  <p id="modal-product-description" class="small"></p>
                  <div class="mt-auto d-grid">
                    <button id="modal-add-to-cart-button" class="btn btn-success btn-lg">
                      <i class="bi bi-cart-plus"></i> Tambah ke Keranjang
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

</body>
</html>