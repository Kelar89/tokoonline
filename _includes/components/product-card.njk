<div class="card h-100 shadow-sm position-relative">
  
  {%- if product.isStylistPick -%}
  <div class="stylist-note">Stylist's Pick!</div>
  {%- endif -%}

  <img src="{{ product.image }}" class="card-img-top" alt="{{ product.title }}" loading="lazy">
  <div class="card-body d-flex flex-column">
    <h5 class="card-title">{{ product.title }}</h5>
    <p class="card-text small text-muted">{{ product.category }}</p>
    <p class="card-text flex-grow-1 d-none d-md-block">{{ product.description }}</p>
    <h4 class="card-price text-end fw-bold text-primary">Rp{{ product.price }}</h4>
  </div>
  <div class="card-footer bg-white border-top-0 pt-0">
      <div class="d-grid gap-2">
        <button class="btn btn-success js-add-to-cart" 
                data-product-slug="{{ product.slug }}"
                data-product-title="{{ product.title }}"
                data-product-price="{{ product.price }}"
                data-product-image="{{ product.image }}">
            <i class="bi bi-cart-plus"></i> Tambah ke Keranjang
        </button>
        <a href="{{ '/produk/' ~ product.slug | url }}" class="btn btn-outline-secondary">
            Lihat Detail
        </a>
      </div>
      <p class="text-center text-muted mb-0" style="font-size: 0.75em; margin-top: 8px;">
        Stok terbatas, respon cepat!
      </p>
  </div>
</div>